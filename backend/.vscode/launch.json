{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",  // Name of the configuration
            "type": "cppdbg",  // Type of debugger
            "request": "launch",  // Specifies the launch request
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",  // Path to the output executable
            "args": [],  // Arguments to pass to the program (if any)
            "stopAtEntry": false,  // Set to true to stop at the entry point
            "cwd": "${workspaceFolder}",  // Current working directory
            "environment": [],  // Environment variables
            "externalConsole": false,  // Run in an external console
            "MIMode": "gdb",  // Use GDB for debugging
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",  // Path to gdb.exe
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",  // Description of the command
                    "text": "-enable-pretty-printing",  // Command to enable pretty-printing
                    "ignoreFailures": true  // Ignore failures
                }
            ],
            "preLaunchTask": "build",  // Task to run before launching
        }
    ]
}
